function setup() {
  createCanvas(400, 400);
  background(255)
  noStroke()
  fill(0)
}

function draw() {
 
  fill(0)
  triangle(200, 100, 100, 300, 300, 300);
  
  if (mouseIsPressed){
    fill(255)
    triangle(162.5, 225, 175, 200, 187.5, 225)
    triangle(162.5, 200, 156.25, 212.5, 168.75, 212.5)
    triangle(168.75, 237.5, 175, 225, 181.25, 237.5)
    triangle(187.5, 200, 181.25, 212.5, 193.75, 212.5)
      
    fill(0)
    triangle(200, 200, 175, 250, 225, 250);
    
    fill(255)
    triangle(200, 200, 250, 200, 225, 250);
    
    fill(255)
    triangle(175, 250, 225, 250, 200, 300); 
    
    fill(0)
    triangle(150, 200, 100, 300, 200, 300);
    triangle(250, 200, 200, 300, 300, 300);
    } else{
  
      fill(255)
      triangle(150, 200, 200, 200, 175, 250);
    
      fill(0)
      triangle(200, 200, 175, 250, 225, 250);
    
      fill(255)
      triangle(200, 200, 250, 200, 225, 250);
    
      fill(255)
      triangle(175, 250, 225, 250, 200, 300); 
    }

   
  
  fill(0)
  triangle(150, 200, 100, 300, 200, 300);
  triangle(250, 200, 200, 300, 300, 300);}
